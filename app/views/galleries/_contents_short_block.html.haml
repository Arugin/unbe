- if @contents.blank?
  .description
    %p= t("NO_GALLERY_CONTENT")
- else
  - @contents.each do |content|
    .video
      .fotorama-box
        .fotorama{data:{width:'200px',ratio:"800/600", keyboard: 'true'}}
          %a{href: content.src}
      .controls
        - if can? :destroy, content
          = button_to "Удалить", [content], :method => :delete, confirm: "#{t(:SURE)}", :class => "btn btn-danger"
        - if can? :edit, content
          .pull-right
            = link_to edit_content_path(content), :class=>'btn btn-primary' do
              Изменить

= paginate @contents, :remote => true

:javascript
  $(function () {
    $('.fotorama').fotorama();
  });