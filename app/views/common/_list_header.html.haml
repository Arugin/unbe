.row
  .col-md-12.list-header.sticky-header
    .row
      .col-md-1
        .select-switch.dropdown.select-control
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            = check_box_tag 'select'
            %b.caret
          %ul.dropdown-menu{role: "menu"}
            %li.select-all
              %a Выбрать все
            %li.select-none
              %a Выбрать ничего

      .col-md-1-5.buttons-container
        - if @_controller.respond_to? :bulk_delete
          = link_to [:bulk_delete, model], class: "btn btn-mini delete-selected",
           rel: :tooltip, title: "Delete selected", 'data-container' => 'body' do
            %i.glyphicon.glyphicon-remove

        - if @_controller.respond_to? :bulk_tag
          = link_to [:bulk_tag, model], :class=>"btn btn-mini tag-selected",
           :rel => :tooltip, :title => "Tag selected", 'data-container' => 'body' do
            %i.glyphicon.glyphicon-tags

      .col-md-6-5.center-group
        .pull-left.scope-switch-container
          = render partial: "common/scope_switch", locals: { current_action: current_action, subject: list_title }
        .pull-left
          = render partial: "common/sort_control", locals: { current_action: current_action, model: model }

      .pull-right
        .col-md-3
          = render :partial => "common/search_control", :locals => { :current_action_path => articles_office_path(scope:'current_user') }