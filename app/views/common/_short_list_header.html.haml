      .col-md-4
        %h4.section-small.no-bottom-margin= title list_title
      .col-md-5.center-group
        = render partial: "common/sort_control", locals: { current_action: current_action, model: model }

      .pull-right
        .col-md-3
          = render :partial => "common/search_control", :locals => { :current_action_path => articles_office_path(scope:'current_user') }