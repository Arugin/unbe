.row-fluid
  %h4
    = link_to article_path(article) do
      %span= article.title
  .author
    = link_to user_profile_path(article.author) do
      = article.author.name
  .publishDate
    = l article.created_at.in_time_zone, format: :short
  .clear
  .description
    - unless article.content.nil?
      = article.content.html_safe
    - else
      = article.tmpContent.html_safe
