%h3 Редактирование профиля
= simple_form_for(@user, :validate => true) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, input_html: { class: "span8" }
    = f.input :first_name, input_html: { class: "span8" }
    = f.input :second_name, input_html: { class: "span8" }
    = f.association :gender, collection: Gender.all.order_by([:name, :desc]), input_html: { class: "span8" }, selected: @user.gender._id, label_method: lambda { |gender| "#{t(gender.name)}" }
    = f.input :from, input_html: { class: "span8" }
    = f.input :about, as: :text, input_html: { class: "span10", id: 'tmpContent'}

  .form-actions
    = f.button :submit, :class => "btn-primary"

= render :partial => 'common/text_editor'

- content_for(:right_bar) do
  = render :partial => 'office/right_bar'