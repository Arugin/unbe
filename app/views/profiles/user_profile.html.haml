#profile
  = render :partial => 'header',:locals => { :user => @user }
  .content-left
    = render :partial => 'menu',:locals => { :user => @user }
    .user-profile
      .fullname= "#{@user.first_name} #{@user.second_name}"
      %dl
        %dt Дата регистрации:
        %dd= l @user.created_at.in_time_zone, format: :short
        %dt Откуда:
        %dd
          - unless @user.from.nil?
            = @user.from
          - else
            = t(:NO_INFO)
        %dt Пол:
        %dd= t @user.gender.name

        %dt О себе:
        %dd
          - unless @user.about.nil?
            = @user.about.html_safe
          - else
            = t(:NO_ABOUT)

- content_for(:right_bar) do
  = render :partial => 'office/right_bar'

