.user-header
  %a.avatar{:href=>"#"}
    = render 'common/avatar', user: user
  %h2.username
    = link_to profile_path(user) do
      = title user.name
  .score
    .hint
      Ранг
    - if user.level == 0
      .experience{data: {toggle: 'tooltip', placement:'top'}, title: "Ранг 0"}
        —
    - else
      .rank-image{data: {toggle: 'tooltip', placement:'top'}, title: "Ранг #{user.level}"}
        = image_tag "/images/ranks/#{user.level}.png"
  .score
    .hint
      Опыт
    .experience{data: {toggle: 'tooltip', placement:'top'}, title: 'Опыт'}
      = user.points
  .clear