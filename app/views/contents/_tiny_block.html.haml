- unless content.nil?
  .fotorama{data:{width:'270px',ratio:"800/600"}}
    %a{href: content.src}
  .clear
  %br
  .more-info
    = link_to content_base_content_path(content) do
      =t 'READ_MORE'
  .more-info
    = link_to content_base_content_path(content), itemprop:"url" do
      =t 'COMMENTS', count: content.comments.size, comment: Russian::pluralize(content.comments.size, 'комментарий','комментария','комментариев')