%h4=title 'Добавить видео'
= horizontal_simple_form_for [@gallery, @content], :validate => true do |f|
  = f.error_notification

  .form-inputs
    = f.input :title, input_html: { class: "span8" }, label: 'Название'
    = f.input :src, input_html: { class: "span8" }, label: 'Ссылка на видео'
    = f.input :description, as: :text, label: false, input_html: { class: "span12", id: 'smallContent' }

  .form-actions
    = f.button :submit, :class => "btn-primary"

= render :partial => 'common/small_text_editor'
