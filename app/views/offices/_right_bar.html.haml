.sidebar
  - if can? :approve, [Article,Content::BaseContent]
    %h3.right-bar
      Модерирование
    %ul.navigation
      %li
        = active_link_to main_app.non_approved_articles_path, active: :exclusive do
          Подтвердить статьи
          %b= "(#{Article.non_approved(current_user).count})" if Article.non_approved(current_user).count > 0
      %li
        = active_link_to main_app.non_approved_contents_path, active: :exclusive do
          Подтвердить работы
          %b= "(#{Content::BaseContent.non_approved(current_user).count})" if Content::BaseContent.non_approved(current_user).count > 0


  - if user_signed_in? and current_user.has_role? :ADMIN
    %h3.right-bar
      Администрирование
    %ul.navigation
      %li
        = active_link_to users_path do
          = "Пользователи (#{User.all.count})"
      %li
        = active_link_to users_path do
          = "Назначить достижения"

  -if user_signed_in?
    %h3.right-bar
      Личный кабинет
    %ul.navigation
      %li
        = active_link_to office_path, active: :exclusive do
          Статус
      %li
        = active_link_to articles_office_path(scope: 'current_user'), active: :exclusive do
          Мои статьи
      %li
        = active_link_to cycles_office_path(scope: 'current_user') do
          Мои циклы
      %li
        = active_link_to galleries_office_path(scope: 'current_user') do
          Мои работы
      %li
        = active_link_to projects_path(scope: 'current_user') do
          Мои проекты
      %li
        %a{:href=>"#"}
          Избранное
      %li
        = active_link_to user_profile_path(current_user) do
          Профиль
      %li
        = active_link_to edit_profile_path do
          Настроить профиль
      %li
        = active_link_to edit_user_registration_path do
          Настройки аккаунта