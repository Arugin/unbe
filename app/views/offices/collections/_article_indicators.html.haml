%span
  - if item.is_updated?
    %i.fa.fa-pencil{title: t('ARTICLE_CHANGED'), data: {toggle: 'tooltip', placement:'top'}}
  - if item.garbage?
    %i.fa.fa-trash-o{title: t('ARTICLE_TRASH'), data: {toggle: 'tooltip', placement:'top'}}
%span
  - unless item.published?
    = link_to publish_article_path(item) do
      = render :partial => 'yes_no',:locals => { :is_true => item.published?, :title=>"опубликована"}
  - else
    = render :partial => 'yes_no',:locals => { :is_true => item.published?, :title=>"опубликована"}
%span
  - if item.is_updated?
    %i.fa.fa-refresh{title: 'Статья изменена. Всем доступна старая версия, до её подтверждения', data: {toggle: 'tooltip', placement:'top'}}
  - else
    = render :partial => 'yes_no',:locals => { :is_true => item.approved?, :title=>"подтверждена"}