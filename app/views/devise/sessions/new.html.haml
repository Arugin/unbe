%h3 Войти на сайт

= horizontal_simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  = f.input :email, required: false, :autofocus => true
  = f.input :password, required: false, :label => "Пароль"
  = f.input :remember_me, label: "Запомнить", as: :boolean if devise_mapping.rememberable?

  .form-actions
    = f.button :submit, "Войти", :class => "btn-primary"

%br

- content_for(:right_bar) do
  = render 'articles/index_bar'
