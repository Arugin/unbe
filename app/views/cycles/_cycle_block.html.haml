- keywords cycle.tag_list
.row
  %h3
    %span=title cycle.correct_title
  .news-user-avatar
    = render 'common/avatar', user: cycle.author
  .info
    .credentials
      .author
        = link_to profile_path(cycle.author) do
          = cycle.author.name
      .publishDate
        = l cycle.created_at.in_time_zone, format: :short
    .clear
    = render 'common/actions_info', user: cycle.author
  .pull-right
    .control-panel
      .edit
        - if can? :update, cycle
          = link_to edit_cycle_path(cycle) do
            %i.fa.fa-pencil{title: t(:EDIT_CYCLE), data: {toggle: 'tooltip', placement:'top'}}
      %div{class:"vote-#{cycle._id}"}
        .mini-vote{title: t(:RATING), data: {toggle: 'tooltip', placement:'top'}}
          .count{:class => ((cycle.votes_point > 0 ? 'positive' : 'negative') unless cycle.votes_point ==0 )}
            = cycle.votes_point
  .clear
  .description
    %span= cycle.correct_description.html_safe
  .clear
